      <h1 class="well">Registration Form</h1>
      <div class="col-lg-12 well">
        <div class="row">
          <form action="/validateRegInputs" method="POST">
            <div class="col-sm-12">
              <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                  <div class="col-sm-6 form-group">
                    <label for="fname">First Name</label>
                    <input id="fname" name="fname" type="text" placeholder="First Name" value="{{data.fname}}" class="form-control">
                  </div>
                  <div class="col-sm-6 form-group">
                    <label for="lname">Last Name</label>
                    <input id="lname" name="lname" type="text" placeholder="Last Name" value="{{data.lname}}" class="form-control">
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6 form-group top-buffer">
                    <label for="uname">Username</label>
                    <input id="uname" name="uname" type="text" placeholder="Username" value="{{data.uname}}"class="form-control">
                  </div>
                  {{#if data.uError}}
                    <p class="error">{{data.uError}}</p>
                  {{/if}}
                  <div class="col-sm-6 form-group top-buffer">
                    <label for="pword">Password</label>
                    <input id="pword" name="pword" type="password" placeholder="Password" class="form-control">
                    {{#if data.pError}}
                    <p class="error">{{data.pError}}</p>
                    {{/if}}
                  </div>
                </div>
                <div class="row top-buffer">
                  <div class=" col-sm-6 form-group">
                    <label for="phone">Phone Number</label>
                    <input id="phone" name="phone" type="text" placeholder="Phone" value="{{data.phone}}" class="form-control">
                    {{#if data.telError}}
                    <p class="error">{{data.telError}}</p>
                    {{/if}}
                  </div>
                  <div class="col-sm-6 form-group">
                    <label for="emailadd">Email Address</label>
                    <input id="emailadd" name="emailadd" type="email" placeholder="Email" value="{{data.emailadd}}" class="form-control">
                    {{#if data.emailError}}
                    <p class="error">{{data.emailError}}</p>
                    {{/if}}
                  </div>
                </div>
              </fieldset>
              <fieldset class="top-buffer">
                <legend>Billing Address</legend>
                <div class="form-group">
                  <label for="company">Company</label>
                  <input id="company" name="company" type="text" placeholder="Company Name" value="{{data.company}}" class="form-control">
                </div>
                <div class="form-group top-buffer">
                  <label for="addressone">Street Address 1</label>
                  <textarea id="addressone" name="addressone" placeholder="Street Address 1" value="{{data.addressone}}" rows="1"
                    class="form-control"></textarea>
                    {{#if data.addError}}
                   <p class="error">{{data.addError}}</p>
                   {{/if}}
                </div>
                <div class="form-group top-buffer">
                  <label for="addresstwo">Street Address 2</label>
                  <textarea id="addresstwo" name="addresstwo" placeholder=" Street Address 2" value="{{data.addresstwo}}" rows="1"
                    class="form-control"></textarea>
                </div>
              </fieldset>
              <div class="row top-buffer">
                <div class="col-sm-4 form-group">
                  <label for="city">City</label>
                  <input id="city" name="city" type="text" placeholder="City" value="{{data.city}}" class="form-control">
                  {{#if data.cityError}}
