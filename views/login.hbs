  <div class="container bottom-buffer">
    <div class="container holder top-buffer reg">
      <h3 class="well bottom-buffer top-padding">Sign in to your Hoster account</h3>
      <div class="col-lg-12 well">
        <div class="row">
          <form action="/login" method="GET">
            <div class="col-sm-12">

              <div class="row">
                <div class="col-lg-12 form-group">
                  <label for="uname">Username</label>
                  <input id="uname" name="uname" type="text" placeholder="Username" class="form-control">
                </div>
              </div>
              <div class="row top-buffer">
                <div class="col-lg-12 form-group ">
                  <label for="password">Password</label>
                  <input id="password" name="password" type="password" placeholder="Password" class="form-control">
                </div>
              </div>
              <div class="remember top-buffer"> <input type="checkbox" id="remember" name="Remember Me">
                <label for="remember">Remember me</label>
              </div>
              <button id="remember" name="remember" type="submit"
                class="btn btn-md btn-info bottom-buffer">Submit</button>
            </div>
          </form>
          <div class="spec-flex">
            <p>New to Hoster?</p>
            <form action="/registration">
              <button type="submit" class="btn btn-sm btn-info" value="Sign Up">Sign Up</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
